	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Backend - Server",
		"program": "${workspaceFolder}/backend/server.mjs",
		"cwd": "${workspaceFolder}/backend",
		"request": "launch",
		"skipFiles": [
		  "<node_internals>/**"
		],
		"type": "node"
	  },
	  {
		"type": "chrome",
		"request": "launch",
		"name": "Frontend - Browser",
		"url": "http://localhost:3001",
		"port": 3001,
		"webRoot": "${workspaceFolder}/frontend"
	  }
	]
  }
  